{
  "device": {
    "type": "crl200s",
    "name": "CRL-200S Vacuum Robot",

    "hardware": {
      "gd32_port": "/dev/ttyS3",
      "lidar_port": "/dev/ttyS1",
      "heartbeat_interval_ms": 20
    },

    "sensor_groups": [
      {
        "id": "gd32_version",
        "source": "gd32",
        "poll_interval_ms": 0,
        "sensors": [
          { "id": "version_string", "type": "String" },
          { "id": "version_code", "type": "I32" }
        ]
      },
      {
        "id": "gd32_status",
        "source": "gd32",
        "sensors": [
          { "id": "is_charging", "type": "Bool" },
          { "id": "is_battery_connected", "type": "Bool" },
          { "id": "wheel_left", "type": "U16", "unit": "ticks" },
          { "id": "wheel_right", "type": "U16", "unit": "ticks" },
          { "id": "bumper_left", "type": "Bool" },
          { "id": "bumper_right", "type": "Bool" },
          { "id": "cliff_left_side", "type": "Bool" },
          { "id": "cliff_left_front", "type": "Bool" },
          { "id": "cliff_right_front", "type": "Bool" },
          { "id": "cliff_right_side", "type": "Bool" },
          { "id": "dustbox_attached", "type": "Bool" },
          { "id": "start_button", "type": "U16" },
          { "id": "dock_button", "type": "U16" }
        ]
      },
      {
        "id": "lidar",
        "source": "delta2d",
        "sensors": [
          { "id": "scan", "type": "PointCloud2D", "unit": "meters" }
        ]
      }
    ],

    "actuators": [
      {
        "id": "drive",
        "type": "DifferentialDrive",
        "modes": ["velocity", "tank"],
        "default_mode": "velocity"
      },
      {
        "id": "vacuum",
        "type": "Pwm",
        "min": 0,
        "max": 100
      },
      {
        "id": "brush",
        "type": "Pwm",
        "min": 0,
        "max": 100
      },
      {
        "id": "side_brush",
        "type": "Pwm",
        "min": 0,
        "max": 100
      }
    ]
  },

  "network": {
    "bind_address": "0.0.0.0:5555",
    "wire_format": "json"
  }
}
